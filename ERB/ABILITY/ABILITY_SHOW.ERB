@ABILITY_SHOW(ARG,ARG:1);人物,页数
    IF ARG:1 == 1
        CALL DRAWLINES("□　基础信息　□")
        PRINTFORML 姓名:%NAME:ARG%
        PRINTFORML 昵称:%CALLNAME:ARG%
        PRINTFORML 好感:{CFLAG:ARG:6}
        PRINT 体力:
	    CALL PRINT_BAR(BASE:ARG:0,MAXBASE:ARG:0,25,　COLOR("体力"))
	    PRINTFORML ({BASE:ARG:0}/{MAXBASE:ARG:0})
	    PRINT 气力:
	    CALL PRINT_BAR(BASE:ARG:1,MAXBASE:ARG:1,25,　COLOR("气力"))
	    PRINTFORML ({BASE:ARG:1}/{MAXBASE:ARG:1}) 
	    PRINT ＳＰ:
	    CALL PRINT_BAR(BASE:ARG:2,MAXBASE:ARG:2,25,　COLOR("ＳＰ"))
	    PRINTFORML ({BASE:ARG:2}/{MAXBASE:ARG:2})
	    PRINT 理智:
	    CALL PRINT_BAR(BASE:ARG:4,MAXBASE:ARG:4,25,　COLOR("理智"))
	    PRINTFORML ({BASE:ARG:4}/{MAXBASE:ARG:4})
        CALL DRAWLINES("□　人物属性　□")
        CALL DRAWLINES("□　人物介绍　□")

    ENDIF
    CUSTOMDRAWLINE -
    PRINTBUTTONLC "[　上一页]" , 95
    PRINTBUTTONLC "[返回]" , 96
    PRINTBUTTONLC "[下一页　]" , 97
    PRINTL
    PRINTBUTTONLC "[上一角色]", 98
    PRINTLC  
    PRINTBUTTONLC "[下一角色]", 99
    INPUT
    CALL ABILITY_SHOW_CHECK(ARG,ARG:1,RESULT)

@ABILITY_SHOW_CHECK(ARG,ARG:1,ARG:2)
    SELECTCASE ARG:2
        CASE 95
            SIF ARG:1 > 1
                CALL ABILITY_SHOW(ARG,ARG:1-1)
        CASE 96
        
        CASE 97
            CALL ABILITY_SHOW(ARG,ARG:1+1)
        CASE 98
            SIF ARG - 1 != MASTER
                CALL ABILITY_SHOW(ARG-1,ARG:1)
        CASE 99
            SIF ARG + 1 < CHARANUM
                CALL ABILITY_SHOW(ARG+1,ARG:1)
    ENDSELECT