@TRAIN_UI
    #DIM LCOUNT
    #DIM C_NO
    CALL DRAWLINES_CENTER("【 调教中 】")
    PRINTFORML 第{DAY}天 {FLAG:3}时{FLAG:4}分 所在地:{CFLAG}
    CALL DRAWLINES("【 状态 】")
    PRINTFORML %NAME:MASTER%
    PRINT 射精
    CALL PRINT_BAR(BASE:MASTER:11,MAXBASE:MASTER:11,10, COLOR("白"))
    CALL PRINT_LINE(2)
    PRINTFORML %NAME:TARGET%
    FOR LCOUNT, 1102, 1109
        C_NO += CFLAG:TARGET:LCOUNT
    NEXT
    IF C_NO == 0
        PRINT [裸体]
    ELSEIF C_NO > 1
        SIF GET_STR_CLOTHE("风衣",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("风衣",TARGET)%]
        SIF GET_STR_CLOTHE("外套",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("外套",TARGET)%]
        PRINTFORM [%GET_STR_CLOTHE("内衣",TARGET)%]
        SIF GET_STR_CLOTHE("手套",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("手套",TARGET)%]
        PRINTFORM [%GET_STR_CLOTHE("内裤",TARGET)%]
        SIF GET_STR_CLOTHE("裙裤",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("裙裤",TARGET)%]
        SIF GET_STR_CLOTHE("袜子",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("袜子",TARGET)%]
        SIF GET_STR_CLOTHE("鞋子",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("鞋子",TARGET)%]
    ENDIF
    PRINTL
    PRINT 体力:
	CALL PRINT_BAR(BASE:TARGET:0,MAXBASE:TARGET:0,10,  COLOR("体力"))
	PRINTFORML ({BASE:TARGET:0}/{MAXBASE:TARGET:0})
	PRINT 气力:
	CALL PRINT_BAR(BASE:TARGET:1,MAXBASE:TARGET:1,10,　COLOR("气力"))
	PRINTFORML ({BASE:TARGET:1}/{MAXBASE:TARGET:1}) 


@UPDATE_PRINT_PALAM(ARG)
    #DIM LCOUNT
    #DIM BAR_SIZE
    #DIM BAR_MAX
    #DIM BAR_COLOUR
    #DIM PALAM_MAX
    #DIM PCOUNT

    BAR_SIZE = 5
    BAR_COLOUR = 0x6666FF
    CALL DRAWLINES("【 珠 】")
    FOR LCOUNT, 0, 100
        IF PALAMNAME:LCOUNT != ""
	        PRINTFORM %PALAMNAME:LCOUNT%LV:{GETPALAMLV(PALAM:ARG:LCOUNT,10)} 
            PALAM_MAX = 10
	        IF GETPALAMLV(PALAM:ARG:LCOUNT,10) > PALAM_MAX
	    	    BAR_MAX = PALAMLV:PALAM_MAX
	        ELSE
	     	    BAR_MAX = PALAMLV:GETPALAMLV(PALAM:ARG:LCOUNT,10) + 1
	        ENDIF
    
	        CALL PRINT_BAR(PALAM:ARG:LCOUNT, BAR_MAX, BAR_SIZE, BAR_COLOUR)
            PCOUNT += 1
            IF PCOUNT >= 6
                PRINTL
                PCOUNT = 0
            ENDIF
        ENDIF
    NEXT
    PRINTL