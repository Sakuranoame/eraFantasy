@TRAIN_UI
    #DIM LCOUNT
    #DIM C_NO
    CALL DRAWLINES_CENTER("【 调教中 】")
    PRINTFORML 第{DAY}天 {FLAG:3}时{FLAG:4}分 所在地:{CFLAG}
    PRINTL
    PRINTFORML %NAME:MASTER%
    PRINT 射精
    CALL PRINT_BAR(BASE:MASTER:11,MAXBASE:MASTER:11,10, COLOR("白"))
    CALL PRINT_LINE(2)
    CALL UPDATE_PRINT_PALAM(TARGET)
    PRINTFORML %NAME:TARGET%
    FOR LCOUNT, 1102, 1109
        C_NO += CFLAG:TARGET:LCOUNT
    NEXT
    IF C_NO == 0
        PRINT [裸体]
    ELSEIF C_NO > 1
        SIF GET_STR_CLOTHE("风衣",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("风衣",TARGET)%]
        SIF GET_STR_CLOTHE("外套",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("外套",TARGET)%]
        PRINTFORM [%GET_STR_CLOTHE("内衣",TARGET)%]
        SIF GET_STR_CLOTHE("手套",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("手套",TARGET)%]
        PRINTFORM [%GET_STR_CLOTHE("内裤",TARGET)%]
        SIF GET_STR_CLOTHE("裙裤",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("裙裤",TARGET)%]
        SIF GET_STR_CLOTHE("袜子",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("袜子",TARGET)%]
        SIF GET_STR_CLOTHE("鞋子",TARGET) != "无"
            PRINTFORM [%GET_STR_CLOTHE("鞋子",TARGET)%]
    ENDIF
    PRINTL
    PRINT 体力:
	CALL PRINT_BAR(BASE:TARGET:0,MAXBASE:TARGET:0,10,  COLOR("体力"))
	PRINTFORML ({BASE:TARGET:0}/{MAXBASE:TARGET:0})
    CUSTOMDRAWLINE -
    SIF TFLAG:忍耐中 == 0
        PRINTBUTTON "[忍耐指示]", 2051
    SIF TFLAG:忍耐中 == 1
        PRINTBUTTON "[解放指示]", 2051
    SIF TFLAG:寸止中 == 0
        PRINTBUTTON "[寸止挑逗]", 2052
    SIF TFLAG:寸止中 == 1
        PRINTBUTTON "[停止挑逗]", 2052
    CALL PRINT_LINE(2)

@UPDATE_PRINT_PALAM(ARG)
    #DIM LCOUNT
    #DIM BAR_SIZE
    #DIM BAR_MAX
    #DIM BAR_COLOUR
    #DIM PALAM_MAX
    #DIM PCOUNT
    #DIM EX_LEVEL
    PCOUNT = 0
    BAR_SIZE = 5
    BAR_COLOUR = 0x6666FF
    PRINTL 【 快感 】
    FOR LCOUNT, 101, 110
        SELECTCASE PALAM:LCOUNT
            CASE IS >= 200000
                EX_LEVEL = 5
                PALAM_MAX = PALAM:LCOUNT + 1
            CASE IS >= 100000
                EX_LEVEL = 4
                PALAM_MAX = 200000
            CASE IS >= 50000
                EX_LEVEL = 3
                PALAM_MAX = 100000
            CASE IS >= 20000
                EX_LEVEL = 2
                PALAM_MAX = 50000
            CASE IS >= 10000
                EX_LEVEL = 1
                PALAM_MAX = 20000
            CASE IS < 10000
                EX_LEVEL = 0
                PALAM_MAX = 10000
        ENDSELECT
        IF PALAMNAME:LCOUNT != ""
	        PRINTFORM %PALAMNAME:(LCOUNT-100)%LV:{EX_LEVEL}

	        CALL PRINT_BAR(PALAM:ARG:LCOUNT, PALAM_MAX, BAR_SIZE, BAR_COLOUR)
            PCOUNT += 1
            IF PCOUNT >= 3
                PRINTL
                PCOUNT = 0
            ENDIF
        ENDIF
    NEXT
    CALL PRINT_LINE(2)