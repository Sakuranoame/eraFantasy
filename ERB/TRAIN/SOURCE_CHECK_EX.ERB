@SOURCE_CHECK_EX(ARG:0); 高潮运算
    #DIM LCOUNT
    #DIMS NAME_EX
    FOR LCOUNT, 0, 7
        SELECTCASE PALAMNAME:LCOUNT
        CASE "快C"
            NAME_EX = C绝顶
        CASE "快M"
            NAME_EX = M绝顶
        CASE "快B"
            NAME_EX = B绝顶
        CASE "快V"
            NAME_EX = V绝顶
        CASE "快A"
            NAME_EX = A绝顶
        CASE "快U"
            NAME_EX = U绝顶
        CASEELSE
            CONTINUE
        ENDSELECT

        SELECTCASE NOW_PALAM(PALAMNAME:LCOUNT)
            CASE IS >= 100000
                NOWEX:NAME_EX = 5
            CASE IS >= 50000
                NOWEX:NAME_EX = 4
            CASE IS >= 30000
                NOWEX:NAME_EX = 3
            CASE IS >= 20000
                NOWEX:NAME_EX = 2
            CASE IS >= 10000
        ENDSELECT

        SIF NOW_PALAM(PALAMNAME:LCOUNT) - CDOWN:LCOUNT >= 10000 && NOWEX:NAME_EX
		CDOWN:LCOUNT = NOW_PALAM(PALAMNAME:LCOUNT) - 10000 + 1000 * NOWEX:NAME_EX

    NEXT

