@EX_TEXT
    #DIMS TEXT_EX
    #DIMS EX_NAME
    #DIM LEVEL = 0
    #DIM LCOUNT
    #DIMS EXLIST
    #DIM SCOUNT
    IF EX_NO() > 0
        TEXT_EX = 
        EXLIST =
        IF EX_NO() <= 1
            FOR LCOUNT, 0 ,8
                IF NOWEX:TARGET:LCOUNT >= 1
                    LEVEL += NOWEX:TARGET:LCOUNT
                    EX_NAME = %EXNAME:LCOUNT%
                ENDIF
            NEXT
            IF LEVEL == 1
                TEXT_EX += "弱"
            ELSEIF LEVEL == 3
                TEXT_EX += "强"
            ELSEIF LEVEL == 4
                TEXT_EX += "超强"
            ELSEIF LEVEL == 5
                TEXT_EX += "最强"
            ENDIF
            TEXT_EX += EX_NAME
            PRINTFORML %TEXT_EX%
        ELSEIF EX_NO() > 1
            LEVEL = 0
            FOR LCOUNT, 0 ,8
                IF NOWEX:TARGET:LCOUNT >= 1
                    LEVEL += NOWEX:TARGET:LCOUNT
                ENDIF
            NEXT
            IF LEVEL / EX_NO() >= 3 & LEVEL / EX_NO() < 4
                TEXT_EX += "强 "
            ELSEIF LEVEL / EX_NO() >= 4 & LEVEL / EX_NO() < 5
                TEXT_EX += "超 强 "
            ELSEIF LEVEL / EX_NO() >= 5
                TEXT_EX += "最 强 "
            ENDIF
            SELECTCASE EX_NO()
                CASE 8
                    TEXT_EX += "八 重 绝 顶"
                CASE 7
                    TEXT_EX += "七 重 绝 顶"
                CASE 6
                    TEXT_EX += "六 重 绝 顶"
                CASE 5
                    TEXT_EX += "五 重 绝 顶"
                CASE 4
                    TEXT_EX += "四 重 绝 顶"
                CASE 3
                    TEXT_EX += "三 重 绝 顶"
                CASE 2
                    TEXT_EX += "双 重 绝 顶"
            ENDSELECT
            FOR LCOUNT, 0, 8
                IF NOWEX:TARGET:LCOUNT >= 1
                    IF SCOUNT == 1
                        EXLIST += " "
                        SCOUNT = 0
                    ENDIF
                    IF NOWEX:TARGET:LCOUNT == 1
                        EXLIST += "弱"
                    ELSEIF NOWEX:TARGET:LCOUNT == 3
                        EXLIST += "强"
                    ELSEIF NOWEX:TARGET:LCOUNT == 4
                        EXLIST += "超强"
                    ELSEIF NOWEX:TARGET:LCOUNT == 5
                        EXLIST += "最强"
                    ENDIF
                    SELECTCASE LCOUNT
                        CASE 0
                            EXLIST += "Ｍ"
                        CASE 1
                            EXLIST += "Ｂ"
                        CASE 2
                            EXLIST += "Ｃ"
                        CASE 3
                            EXLIST += "Ｕ"
                        CASE 4
                            EXLIST += "Ｖ"
                        CASE 5
                            EXLIST += "Ａ"
                        CASE 6
                            EXLIST += "Ｆ"
                        CASE 7
                            EXLIST += "Ｓ"
                    ENDSELECT
                    SCOUNT = 0
                ENDIF
            NEXT
            PRINTFORML %TEXT_EX%
            PRINTFORML ( %EXLIST% )
        ENDIF
    ENDIF
    
