@SOURCE_CHECK_POWER
    ;体力越高减的越少
    IF BASE:TARGET:0 >= (90*MAXBASE:TARGET:0) / 100
        TIMES DOWNBASE:0, 0.5
    ELSEIF BASE:TARGET:0 >= (80*MAXBASE:TARGET:0) / 100
        TIMES DOWNBASE:0, 0.6
    ELSEIF BASE:TARGET:0 >= (70*MAXBASE:TARGET:0) / 100
        TIMES DOWNBASE:0, 0.7
    ELSEIF BASE:TARGET:0 >= (60*MAXBASE:TARGET:0) / 100
        TIMES DOWNBASE:0, 0.8
    ELSEIF BASE:TARGET:0 >= (50*MAXBASE:TARGET:0) / 100
        TIMES DOWNBASE:0, 0.9
    ENDIF
    
    