@SOURCE_CHECK_ENERGY
    ;气力越高减的越少
    IF BASE:TARGET:1 >= (90*MAXBASE:TARGET:1) / 100
        TIMES DOWNBASE:1, 0.5
    ELSEIF BASE:TARGET:1 >= (80*MAXBASE:TARGET:1) / 100
        TIMES DOWNBASE:1, 0.6
    ELSEIF BASE:TARGET:1 >= (70*MAXBASE:TARGET:1) / 100
        TIMES DOWNBASE:1, 0.7
    ELSEIF BASE:TARGET:1 >= (60*MAXBASE:TARGET:1) / 100
        TIMES DOWNBASE:1, 0.8
    ELSEIF BASE:TARGET:1 >= (50*MAXBASE:TARGET:1) / 100
        TIMES DOWNBASE:1, 0.9
    ENDIF
    
    
