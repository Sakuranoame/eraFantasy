@EVENTFIRST
    #DIM MEMO_LINECOUNT
    #DIM LCOUNT
    $EVENTFIRST_LOOP
    LOADGLOBAL
    REDRAW 0
    PRINTL
    PRINTFORML 选择难度
    PRINTFORML 游戏并没有硬性目标，难度只是让游戏变得更耐玩而已
    PRINTL
    PRINTFORML [0] 简单
    PRINTFORML [1] 普通
    PRINTFORML [2] 困难
    PRINTL
    PRINTFORML [3] 游戏设置(全局设置)
    PRINTL
    PRINTFORML [4] 返回

    INPUT
    IF RESULT == 4
        CALL SYSTEM_TITLE
    ELSEIF RESULT == 3
        CLEARLINE LINECOUNT - MEMO_LINECOUNT
        CALL FIRST_SETTING
    ELSEIF RESULT == 0  ;难度修改
        FLAG:1 = 1
        CALL START_DATA
    ELSEIF RESULT == 1
        FLAG:1 = 2
        CALL START_DATA
    ELSEIF RESULT == 2
        FLAG:1 = 3
        CALL START_DATA
    ENDIF
    ;GOTO EVENTFIRST_LOOP ;初始页面循环

@START_DATA
    CALL SETDATA
    CALL NEW_CHARACTER

@SETDATA ;初期数据设定
    ADDCHARA 0
    ADDCHARA 1
    ADDCHARA 2
    MASTER = NO:0
    ASSI = -1
    TARGET = 2
    DAY = 1