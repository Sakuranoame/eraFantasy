@PRINT_LINE(ARG)
#DIM LCOUNT
FOR LCOUNT, 0, ARG
    PRINTL
NEXT

@DRAWLINES(ARGS)
#DIM LCOUNT
#DIMS BUTTONS

BUTTONS = %ARGS%

PRINTBUTTON ARGS, BUTTONS

FOR LCOUNT, 0, NUM("一行字数") - STRLENS(ARGS)
	PRINTFORM -
NEXT
PRINTL 

@DRAWLINES_CENTER(ARGS)
#DIM LCOUNT
FOR LCOUNT, 0, (NUM("一行字数") - STRLENS(ARGS) )/2
	PRINTFORM -
NEXT
PRINTFORM %ARGS%
FOR LCOUNT, 0, (NUM("一行字数") - STRLENS(ARGS) )/2
	PRINTFORM -
NEXT
PRINTL


@NUM(ARGS,ARG)
    #FUNCTION
    SELECTCASE ARGS
        CASE "一行字数"
            RETURNF 2*GETCONFIG("ウィンドウ幅")/GETCONFIG("フォントサイズ") - 1
    ENDSELECT