@NUM(ARGS,ARG)
    #FUNCTION
    SELECTCASE ARGS
        CASE "一行字数"
            RETURNF 2*GETCONFIG("ウィンドウ幅")/GETCONFIG("フォントサイズ") - 1
    ENDSELECT


@TEXT_RJ(ARGS, ARG)
#FUNCTIONS
SELECTCASE STRLENS(ARGS)
CASE IS >= ARG
	RETURNF ARGS
CASEELSE
	LOCALS = %BL(ARG-STRLENS(ARGS) )%%ARGS%
ENDSELECT
RETURNF LOCALS

@TEXT_LJ(ARGS, ARG)
#FUNCTIONS
SELECTCASE STRLENS(ARGS)
CASE IS >= ARG
	RETURNF ARGS
CASEELSE
	LOCALS = %ARGS%%BL(ARG-STRLENS(ARGS) )%
ENDSELECT
RETURNF LOCALS

@BL(ARG)
#FUNCTIONS
#DIM LCOUNT

LOCALS = 
SIF ARG <= 0
	RETURNF LOCALS
FOR LCOUNT, 0, ARG/2
	LOCALS += "　"
NEXT
SIF ARG%2
	LOCALS += " "

RETURNF LOCALS