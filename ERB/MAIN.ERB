
;UI分流
@MAIN_UI
    SELECTCASE UI_MODE
        CASE GAL
            CALL UI_GAL
        CASE SEX
            CALL UI_SEX
        CASE DEBUG
            CALL UI_DEBUG
    ENDSELECT
    CALL MAIN_INPUT

@MAIN_INPUT
    INPUT
    SELECTCASE UI_MODE
        CASE GAL
            CALL INPUT_GAL
        CASE DEBUG
            CALL INPUT_DEBUG
    ENDSELECT
    CALL MAIN_UI

@UI_LINE_PUSH(ARGS)
    #DIM LCOUNT
    FOR LCOUNT, 1000, 0, -1
        UI_LINE:LCOUNT = %UI_LINE:(LCOUNT-1)%
    NEXT
    UI_LINE:0 = %ARGS%
    

@UI_LINE
    #DIM LCOUNT
    CUSTOMDRAWLINE -
    FOR LCOUNT, 20, -1, -1
        PRINTFORM %UI_LINE:LCOUNT%
        PRINTL
    NEXT
